<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/paint.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <% if (prods.length > 0) { %>
                    <div class="grid">
                        <% for (let paint of prods) { %>
                            <article class="card product-item">
                                <header class="card__header">
                                    <h1 class="product__title">
                                        <%= paint.title %>
                                    </h1>
                                </header>
                                <div class="card__image">
                                    <img src="<%= paint.imageUrl %>" alt="<%= paint.title %>">
                                </div>
                                <div class="card__content">
                                    <h3 class="product__price">
                                        <%= paint.price %> â‚¬
                                    </h3>
                                    <p class="product__description">
                                        <%= paint.description %>
                                    </p>
                                    <p class="product__description">
                                        <%= paint.category.title %>
                                    </p>
                                </div>
                                <div class="card__actions">
                                    <a href="/admin/edit-paint/<%= paint.id %>?edit=true" class="btn">Edit</a>
                                    <form action="/admin/delete-paint" method="POST">
                                        <input type="hidden" value="<%= paint.id %>" name="paintId">
                                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                        <button class="btn" type="submit">Delete</button>
                                    </form>

                                </div>
                            </article>
                            <% } %>
                    </div>
                    <% } else { %>
                        <h1>No Paints Found!</h1>
                        <% } %>
            </main>
            <%- include('../includes/footer.ejs') %>