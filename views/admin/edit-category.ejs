<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/paint.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<% if (editing) { %>edit-category<% } else { %>add-category<% } %>" method="POST">
            <div class="form-control">
                <label for="title">Category Title</label>
                <input type="text" name="title" id="title" value="<% if (editing) { %><%= paint.title %><% } %>">
            </div>
            
            <% if (editing) { %>
                <input type="hidden" value="<%= paint.id %>" name="paintId">
            <% } %>

            <button class="btn" type="submit"><% if (editing) { %>Update Category<% } else { %>Add Category<% } %></button>
        </form>
    </main>
<%- include('../includes/footer.ejs') %>