<%- include('../includes/header.ejs') %>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul>
                    <% orders.forEach(order => { %>
                        <li>
                            <h3># <%= order.id %> 
                                <a href="/orders/<%= order.id %>"> Invoice </a>
                                <input type="hidden" value="<%= order.id %>" name="orderId">
                                <a href="/checkout"> Paiement avec Stripe </a>
                            </h3>
                            <ul>
                                <% order.paints.forEach(paint => { %>
                                    <li class="orders__products-item"><%= paint.title %> (<%= paint.orderItem.quantity %>) - </li>
                                <% }); %>
                            </ul>
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/footer.ejs') %>